<!DOCTYPE html>
<html>
	<head>
		{>"shared/head"/}
	</head>
	<body>
		{>"shared/nav"/}
		
	    <div class="container">
	      <div class="page-header">
	        <h1>{site.title}</h1>
	      </div>
	      <p class="lead" id="intro">
	      {site.intro}<br />
	      If you don't own an account yet, visit the <a href='/register'>registration page</a>.
	      </p>
	      
	      <form id="loginForm">
	      	<div class="alert alert-danger" id="errorBox" role="alert"></div>
	      
	      	<div class="form-group">
	      		<label for="username">Username</label>
	      		<input id="username" name="username" type="text" class="form-control" placeholder="Your username" />
	      	</div>
	      	<div class="form-group">
	      		<label for="password">Password</label>
	      		<input id="password" name="password" type="password" class="form-control" placeholder="Your password" />
	      	</div>
	      	
	      	<button type="submit" class="btn btn-primary" id="loginNow">Submit</button>
	      </form>
	    </div>
	    
   	    <script type="text/javascript" src="/public/js/login.js"></script>
		
		{>"shared/footer"/}
	</body>
</html>